<h1>New Container</h1>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class = "panel-title">
      container settings
    </h3>
  </div>

  <div class="panel-body">

    <%= form_tag(container_create_path, method: "post") do %>

      <fieldset class="form-group">
        <%= label_tag(:name, "container name") %>
        <%= text_field_tag :name, "", class: 'form-control', placeholder: "container_name" %>
        <small class="text-muted">
          Assign the specified name to the container.
        </small>
      </fieldset>

      <fieldset class="form-group">
        <%= label_tag(:image, "image") %>
        <%= select_tag(:image, options_for_select(@images.collect{ |i| [i.json['RepoTags'].join(''), i.json['RepoTags'].join('')]})) %>
      </fieldset>


      <fieldset class="form-group">
        <%= label_tag(:hostname, "hostname") %>
        <%= text_field_tag :hostname, "", class: 'form-control', placeholder: "hostname" %>
        <small class="text-muted">
          A string value containing the hostname to use for the container.
        </small>
      </fieldset>

      <fieldset class="form-group">
        <%= label_tag(:command, "command") %>
        <%= text_field_tag :command, "", class: 'form-control', placeholder: "/bin/bash" %>
        <small class="text-muted">
          Command to run specified as a string or an array of strings.
        </small>
      </fieldset>

      <fieldset class="form-inline">
        <%= label_tag(:volume_in, "volumes") %>
        <%= text_field_tag :voulume_in, "", class: 'form-control', placeholder: "/dev/bus/usb", size: 10 %>
        <%= label_tag(:volume_out, ":") %>
        <%= text_field_tag :volume_out, "", class: 'form-control', placeholder: "/dev/bus/usb", size: 10 %>
      </fieldset>
      <fieldset class="form-group">
        <small class="text-muted">
          A list of volume bindings for this container. Each volume binding is a string in one of these forms:
          host_path:container_path to bind-mount a host path into the container.
        </small>
      </fieldset>

      <fieldset class="form-group">
        <%= label_tag(:env, "enviroment variables") %>
        <%= text_field_tag :env, "", class: 'form-control', placeholder: "FOO=bar, BAZ=quux" %>
        <small class="text-muted">
          A list of environment variables, seperated with a comma.
         </small>
      </fieldset>

      <fieldset class="form-group">
        <%= label_tag(:network, "network mode ") %>
        <%= select_tag(:network, options_for_select(['bridge', 'host', 'none'])) %>
        <small class="text-muted">
          Sets the networking mode for the container. Supported standard values are: bridge, host, none.
        </small>
      </fieldset>


      <fieldset class="form-inline">
        <%= label_tag(:port_in, "container port/protocol") %>
        <%= text_field_tag :port_in, "", class: 'form-control', placeholder: "80/tcp", size: 5 %>
        <%= label_tag(:port_out, "exposed to") %>
        <%= text_field_tag :port_out, "", class: 'form-control', placeholder: "8080", size: 5 %>
      </fieldset>
      <fieldset class="form-group">
        <small class="text-muted">
          A map of exposed container ports and the host port they should map to.
        </small>
      </fieldset>


      <fieldset class="form-group">
        <%= label_tag(:tty, "tty ") %>
        <%= select_tag(:tty, options_for_select(['true', 'false'])) %>
        <small class="text-muted">
          Boolean value, Attach standard streams to a tty, including stdin if it is not closed.
        </small>
      </fieldset>

      <fieldset class="form-group">
        <%= label_tag(:privileged, "privileged ") %>
        <%= select_tag(:privileged, options_for_select(['true', 'false'])) %>
        <small class="text-muted">
            Gives the container full access to the host. Specified as a boolean value.
        </small>
      </fieldset>


      <%= submit_tag "create", class:  "btn btn-primary"%>
    <% end %>

  </div>
</div>
